<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etDueno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del dueño" />

    <EditText
        android:id="@+id/etMascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de la mascota" />

    <!-- Spinner para tipo de mascota -->
    <Spinner
        android:id="@+id/spinnerTipoMascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Spinner para destino -->
    <Spinner
        android:id="@+id/spinnerDestino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Botón para seleccionar la hora -->
    <Button
        android:id="@+id/btnSeleccionarHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Hora" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Solicitud" />

    <Button
        android:id="@+id/btnConsultar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar Solicitudes" />

    <TextView
        android:id="@+id/tvResultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultados"
        android:textSize="16sp"
        android:paddingTop="10dp" />

</LinearLayout>
